<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <title>Cinema Blog | TV</title>
    </head>
    <body>
        <header>
            <%- include('../partials/header'); %>
        </header>

        <main class="p-10 w-full">
            <div class="mt-10 flex flex-col items-center md:items-stretch">
                <div class="text-center">
                    <h3 class="text-3xl font-bold dark:text-white">TV Shows</h3>
                </div>
                <% if (posts.length === 0) {%>
                    <div class="w-full text-center mt-10">
                        <h4 class="text-2xl font-bold dark:text-white">No tv shows posts</h4>
                    </div>
                <% } else { %>
                    <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 justify-items-center">
                        <% posts.forEach(function(post) { %>
                            <%- include('../partials/postCard', {post: post}) %>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </main>
    </body>
</html>